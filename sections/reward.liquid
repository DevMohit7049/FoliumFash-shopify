{{ 'reward.css' | asset_url | stylesheet_tag }}

<section class="rewards-banner">
  <div class="rewards-banner__content">
    <div class="rewards-banner__text">
      <h2 class="rewards-banner__heading">{{ section.settings.heading }}</h2>
      <p class="rewards-banner__subtext">{{ section.settings.subtext }}</p>
    </div>

    <div class="rewards-banner__buttons">
      <a href="{{ routes.account_register_url }}" class="rewards-btn">
        {{ section.settings.create_account_label }}
      </a>
      <a href="{{ routes.account_login_url }}" class="rewards-btn secondary">
        {{ section.settings.login_label }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rewards Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get Rewarded For Doing Good"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Join our Rewards Program to earn points that can be used as cash on future purchases."
    },
    {
      "type": "text",
      "id": "create_account_label",
      "label": "Create Account Button Text",
      "default": "Create Account"
    },
    {
      "type": "url",
      "id": "create_account_link",
      "label": "Create Account Link",
    },
    {
      "type": "text",
      "id": "login_label",
      "label": "Login Button Text",
      "default": "Log in to view points"
    },
    {
      "type": "url",
      "id": "login_link",
      "label": "Login Link",
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#4C5E55"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    { "name": "Rewards Banner" }
  ]
}
{% endschema %}
